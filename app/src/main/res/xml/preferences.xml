<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Check for Celsius">

        <CheckBoxPreference
            android:key="checkbox_preference"
            android:title="Check for Celsius"
            android:summaryOff="Not Enabled"
            android:summaryOn="Enabled"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="User name">

        <EditTextPreference
            android:key="edittext_preference"
            android:title="Name"
            android:summaryOff="Not Enabled"
            android:summaryOn="Enabled"
            android:dialogTitle="Name"
            android:text="hello"/>

    </PreferenceCategory>

</PreferenceScreen>